VPI_LIB := vpi 

# temp hack to bypass makefile from tests
#MODULE=test_endian_swapper

# Modelsim is 32-bit only
ARCH:=i686

ifdef VERILOG_INCLUDE_DIRS
VLOG_ARGS += +incdir+$(VERILOG_INCLUDE_DIRS)
endif

ifeq ($(GUI),1)
SIM_CMD = vsim -gui
else
SIM_CMD = vsim -c
endif

# Windows
# -------
ifeq ($(OS),Windows_NT)

runsim.do : $(VERILOG_SOURCES) $(CUSTOM_SIM_DEPS)
	echo "vlib work" > $@
	echo "vlog -timescale 1ns/100ps -mfcu +acc=rmb -sv $(VLOG_ARGS) $(shell cygpath -m $(VERILOG_SOURCES))" >> $@
	echo "vsim -pli libgpi.$(LIB_SUFFIX) $(VSIM_ARGS) work.$(TOPLEVEL) -onfinish stop" >> $@
ifneq ($(GUI),1)
	echo "run -all" >> $@
	echo "exit" >> $@
endif

results.xml: runsim.do $(COCOTB_LIBS)
# TODO: add to PATH rather than LD_LIBRARY_PATH
#	LD_LIBRARY_PATH=$(LIB_DIR)::$(LD_LIBRARY_PATH) MODULE=$(MODULE) TESTCASE=$(TESTCASE) TOPLEVEL=$(TOPLEVEL) \
	MODULE=$(MODULE) TESTCASE=$(TESTCASE) TOPLEVEL=$(TOPLEVEL) \
	PYTHONPATH=$(shell cygpath -m $(LIB_DIR));$(shell cygpath -m $(SIM_ROOT));$(shell cygpath -m $(PWD));$(PYTHONPATH) \
	$(SIM_CMD) -do runsim.do 2>&1 | tee sim.log

    
# Linux
# -----   
else

runsim.do : $(VERILOG_SOURCES) $(CUSTOM_SIM_DEPS)
	echo "vlib work" > $@
	echo "vlog -timescale 1ns/100ps -mfcu +acc=rmb -sv $(VLOG_ARGS) $(VERILOG_SOURCES)" >> $@
	echo "vsim -pli libgpi.$(LIB_SUFFIX)  $(VSIM_ARGS) work.$(TOPLEVEL) -onfinish stop" >> $@
ifneq ($(GUI),1)
	echo "run -all" >> $@
	echo "exit" >> $@
endif

results.xml: runsim.do $(COCOTB_LIBS)
	LD_LIBRARY_PATH=$(LIB_DIR)::$(LD_LIBRARY_PATH) MODULE=$(MODULE) TESTCASE=$(TESTCASE) TOPLEVEL=$(TOPLEVEL) \
	PYTHONPATH=$(LIB_DIR):$(SIM_ROOT):$(PWD):$(PYTHONPATH) \
	$(SIM_CMD) -do runsim.do 2>&1 | tee sim.log

endif    
    
    
clean::
	-rm -rf runsim.do
	-rm -rf sim.log

